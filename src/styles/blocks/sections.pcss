.section {
  display: flex;
  margin-bottom: 50px;
  position: relative;
  flex-flow: column;
}

.section__wrapper {
  background: no-repeat center url('~images/decoration/section-shadow.png');
  position: absolute;
  bottom: 0;
  height: 25px;
  width: 100%;
  transform: translateY(100%);
}

.short {
  flex-flow: row nowrap;
  color: $short-text-color;
  font-size: 13px;
  margin-bottom: 40px;

  @include phones {
    display: none;
  }
}

.slider {
  position: relative;
  overflow: hidden;
  width: 62%;
  padding-bottom: 30px;
  max-width: 760px;
  margin-right: 40px;
  background-color: white;

  @include bigTablets {
    width: 80%;
    margin: 0;
    max-width: 100%;
    margin-bottom: 50px;
  }
  @include tablets {
    width: 100%;
    margin-bottom: 50px;
  }
}

.news {
  width: 32%;
  max-width: 360px;
  display: flex;
  flex-flow: column wrap;

  @include bigTablets {
    display: none;
  }


}

.fund,
.center {
  display: none;
}

.sponsors {
  margin: 50px 0;
}