.documents__wrapper {
  & .documents-download__item {
    &:first-child {
      border-top: 1px solid transparent;
    }
  }
}

.documents-download {
  margin-bottom: 10px;
}

.documents-download__item {
  border-top: 1px solid #cccccc;
  padding: 35px 0;
  text-decoration: none;

//&:hover { //  .download-general__heading { //    color: $hover-color; //  } // //  .download-general__link { //    color: $hover-color; //  } //}

  &--reports {
    font-size: 13px;
    padding: 0;
    margin: 0;
    border-top: none;
  }
}

.download-general__wrapper {
  display: flex;
  flex-flow: column nowrap;
  padding-left: 25px;
  max-width: 70%;

}

.download-general__heading {
  color: #000000;
  font-size: 16px;
  margin-bottom: 7px;

  &--sidebar {
    color: #575756;
    font-size: 14px;
  }
}

.download-general__link {
  color: #1f4b79;
  font-size: 14px;
  text-decoration: none;
  display: flex;
  flex-direction: row;

  &--reports {
    display: flex;
    flex-flow: column;
    align-items: flex-start;
    justify-content: center;
    max-width: 90%;
  }
}

.download-general-link__item {
  margin-right: 20px;
  text-decoration: none;

  &:hover {
    color: $hover-color;
  }

  &:last-child {
    margin: 0;
  }

  &--reports {
    font-size: 13px;
  }
}

.documents-download__more {
  color: $news-more-link-color;
  font-size: 14px;
  cursor: pointer;

  &:hover {
    text-decoration: underline;
    color: $hover-color;
  }
}
