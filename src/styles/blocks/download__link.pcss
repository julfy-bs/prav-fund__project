      height: 35px;
      padding-bottom: 4px;
      margin-right: 10px;
    }

    &:hover {
      &::before {
        content: '';
        display: inline-block;
        background: svg-load('file_PDF_small.svg', fill=#ea1f21, width=100%, height=100%) bottom center no-repeat;
