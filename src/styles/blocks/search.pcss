.search {
  display: flex;
  flex-flow: row nowrap;
}

.search__input {
  height: 40px;
  border: none;
  padding-left: 5px;
  background-color: $main-background-color;

  &:focus {
    outline-style: solid;
    outline-color: $main-social-color;
    outline-width: 2px;
  }

  @include phones {
    display: none;
  }
}

.search-icon {
  width: 40px;
  fill: $main-social-color;

  &:hover {
    fill: $hover-color;
  }
}